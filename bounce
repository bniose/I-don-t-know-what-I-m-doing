/**
 * Bounce. 
 * 
 * When the shape hits the edge of the window, it reverses its direction. 
 */
 
int rad = 50;        // Width of the shape
float xpos, ypos;    // Starting position of shape   
float xpos2, ypos2;


float xspeed = 5;  // Speed of the shape
float yspeed = 4.8;  // Speed of the shape

int xdirection = 1;  // Left or Right
int ydirection = 1;  // Top to Bottom
int xdirection2= 1;
int ydirection2= 1;


void setup() 
{
  size(640, 360);
  noStroke();
  frameRate(100);
  ellipseMode(RADIUS);
  // Set the starting position of the shape
  xpos = width/2;
  ypos = height/2;
  
  xpos2= width/3;
  ypos2= height/3;
}

void draw() 
{
  background(102);
  
  // Update the position of the shape
  xpos = xpos + ( xspeed * xdirection );
  ypos = ypos + ( yspeed * ydirection );
  xpos2= xpos2 + (xspeed*xdirection2);
  ypos2= ypos2 + (yspeed*ydirection2);
  
  // Test to see if the shape exceeds the boundaries of the screen
  // If it does, reverse its direction by multiplying by -1
  if (xpos > width-rad || xpos < rad) {
    xdirection *= -1;
  }
  if (ypos > height-rad || ypos < rad) {
    ydirection *= -1;
  }
  if (xpos2 > width-rad || xpos2 < rad){
    xdirection2 *= -1;
  }
  if (ypos2 > height-rad || ypos2 < rad){
    ydirection2 *= -1;
  }

  // Draw the shape
  ellipse(xpos, ypos, rad, rad);
  ellipse(xpos2,ypos2,rad,rad);
  
}
